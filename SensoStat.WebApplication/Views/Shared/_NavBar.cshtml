@{
}

<nav class="navbar navbar-expand-lg navbar-light bg-white">
    <img class="navbar-brand img-fluid ms-5" title="Accueil SensoStat" alt="SensoStat" href="#" src="~/images/logo.png">
    @if (this.Url.ActionContext.HttpContext.Request.Cookies["Jwt"] != null)
    {
        <div class="container-fluid">
            <button class="navbar-toggler ms-auto me-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav ms-auto me-0 mb-2 mb-lg-0">
                        @*Menu de geston des séances*@
                        <li class="nav-item dropdown ms-auto me-0">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fab fa-stack-overflow"></i>
                                <span>Gestion des séances</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                <li><a class="dropdown-item" asp-controller="session" asp-action="index"><i class="fas fa-tasks me-1"></i>Séances</a></li>
                                <li><a class="dropdown-item" asp-controller="session" asp-action="archive"><i class="fas fa-archive me-1"></i>Archive</a></li>
                            </ul>
                        </li>

                        @if (this.Url.ActionContext.HttpContext.Request.Cookies["Role"] == "SuperAdmin")
                        {

                            @*Menu d'administration des comptes*@
                            <li class="nav-item dropdown ms-auto me-0">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-tools"></i>
                                    <span>Administration</span>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                    <li><a class="dropdown-item" aria-current="page" asp-area="" asp-controller="user" asp-action="create"><i class="fas fa-users me-1"></i>Créer un compte</a></li>
                                    <li><a class="dropdown-item"><i class="fas fa-list me-1"></i>Liste des comptes</a></li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item ms-auto me-0">
                            <a class="nav-link" asp-area="" asp-controller="" asp-action="">
                                <i class="fas fa-sign-out-alt fa-2x"></i>
                            </a>
                        </li>
                    </ul>
                </div>
        </div>
     }
</nav>