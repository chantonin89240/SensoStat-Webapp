<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SensoStat.Mobile.Views.HomeSession"
    Title="{Binding Title}">
    <StackLayout BackgroundColor="LightGray">
        <Frame BackgroundColor="White" Padding="12" CornerRadius="0">
            <Label Text="{Binding Title}" HorizontalTextAlignment="Center" VerticalOptions="StartAndExpand" TextColor="White" FontSize="36"/>
        </Frame>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Voici l'instruction n°1 concernant le produit "/>
                        <Span Text="n°786" FontAttributes="bold"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Button  Text="Etape suivante" Command="{Binding NextCommand}" Background="#fd7e14" VerticalOptions="Center" Margin="10" />
    </StackLayout>
</ContentPage>
