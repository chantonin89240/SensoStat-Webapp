<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>SensoStat</title>
		<link rel="stylesheet" href="~/css/app.css" />
		<link rel="stylesheet" href="~/lib/bootstrap-5.1.3-dist/css/bootstrap.min.css" />
		<script src="~/lib/bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
		<script src="~/lib/fontawesome-free-5.15.4-web/js/all.js"></script>
	</head>
	<body>
		<!-- Barre de navigation -->
		<!-- Template Bootstrap 5 -->
		<nav class="navbar navbar-expand-lg navbar-light bg-white">
			<img class="navbar-brand img-fluid ms-5" title="Accueil SensoStat" alt="SensoStat" href="#" src="~/images/logo.png">
			<div class="container-fluid">
				<button class="navbar-toggler ms-auto me-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarTogglerDemo02">
					<ul class="navbar-nav ms-auto me-0 mb-2 mb-lg-0">
						<li class="nav-item ms-auto me-0">
							<a class="nav-link" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index"  asp-route-pageNumber="1">
								<i class="fas fa-home"></i>
								<span >Accueil</span>
							</a>
						</li>
						<li class="nav-item dropdown ms-auto me-0">
							<a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="fas fa-tools"></i>
								<span >Administration</span>
							</a>
							<ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
								<li><a class="dropdown-item" asp-area="administration" asp-controller="Artiste" asp-action="Index"><i class="fas fa-users me-1"></i>Séances</a></li>
								<li><a class="dropdown-item" asp-area="administration" asp-controller="commentaire" asp-action="Index"><i class="fas fa-comments me-1"></i>Publication</a></li>
								<li><a class="dropdown-item" asp-area="administration" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-tachometer-alt me-1"></i>Tableau de bord</a></li>
							</ul>
						</li>
						<li class="nav-item ms-auto me-0">
							<a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Contact">
								<i class="far fa-user-circle fa-2x"></i>
							</a>
						</li>
					</ul>
				</div>
			</div>				
		</nav>
		
		<!-- Conteneur principal -->
		<!-- Template Bootstrap 5 -->
		<div class="container-fluid mb-5 p-4 bg-light h-auto" style="min-height: 700px;">
			@RenderBody()
		</div>

		<!-- Pied de page -->
		<!-- Template Bootstrap 5 -->
		<nav class="navbar fixed-bottom navbar-light bg-white">
			<div class="container-fluid d-flex justify-content-center">
				<a class="navbar-brand h6 text-wrap fs-6" asp-area="" asp-controller="Home" asp-action="Index" asp-route-pageNumber="1">SensoStat - Tous droits réservés © SensoStat 2022 </a>
			</div>
		</nav>
	</body>
</html>
