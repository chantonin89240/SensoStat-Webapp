<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SensoStat.Mobile.Views.FinalPage">
    <StackLayout BackgroundColor="LightGray">
        <Frame BackgroundColor="White" Padding="12" CornerRadius="0">
            <Image Source="logo.png" />
        </Frame>
        <Label Text="Merci de votre participation à cette séance." HorizontalTextAlignment="Center" VerticalOptions="StartAndExpand" TextColor="White" FontSize="36"/>
        <Label Text="Vous pouvez fermer la page." HorizontalTextAlignment="Center" VerticalOptions="StartAndExpand" TextColor="White" FontSize="36"/>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Contacter SensoStat "/>
                        <Span Text="https://sensostat.fr" FontAttributes="None" TextColor="Blue"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Button  Text="Fermer" Command="{Binding CloseCommand}" Background="#fd7e14" VerticalOptions="Center" Margin="10" />
    </StackLayout>
</ContentPage>
